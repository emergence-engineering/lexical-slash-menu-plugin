{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es6", "es2015", "dom", "es2017", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "isolatedModules": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
